<?xml version="1.0" encoding="utf-8"?><!--根布局用侧滑控件
tools:openDrawer:预览的时候开启方向
只要是tools命名控件的属性一般都是控制预览的-->
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dl"
    android:fitsSystemWindows="true"
    android:background="@color/background"
    tools:context=".MainActivity"
    tools:openDrawer="start">

    <!--这部分是主界面内容-->
    <include layout="@layout/app_bar_home" />

    <!--这部分是侧滑内容
       layout_gravity:是控制侧滑方向的
       start:表示从左侧滑出
       end:表示从右侧
       上面说的start并不一定是左侧
       因为这个start其实是手机的布局方法
       有些语言的手机是从右到左布局
       那么如果还是start
       那就是从右侧滑出
   -->

    <LinearLayout
        android:layout_gravity="start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/background"
        android:orientation="vertical">
        <!--滚动容器
            因为这个里面只能有一个子布局，所以需要套一个布局

            android:scrollbars="none":表示没有滚动条
        -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none">
            <!--侧滑内容布局-->
            <!--wrap_content，因为这类是滚动视图，所以使用match_parent是不能充满的，
                因为还有内容可以滚动，不可能充满父布局-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--引入用户布局-->
                <include layout="@layout/user_info" />
                <!--引入分割线布局-->
                <include layout="@layout/divider_small" />

                <!--按钮容器-->
                <LinearLayout style="@style/ItemContainer">
                    <!--图标-->
                    <ImageView
                        style="@style/ItemIcon"
                        android:src="@drawable/ic_phone" />
                    <!--文本-->
                    <TextView
                        style="@style/ItemText"
                        android:text="@string/my_code" />
                </LinearLayout>

                <!--按钮容器-->
                <LinearLayout style="@style/ItemContainer">
                    <!--图标-->
                    <ImageView
                        style="@style/ItemIcon"
                        android:src="@drawable/ic_phone" />
                    <!--文本-->
                    <TextView
                        style="@style/ItemText"
                        android:text="@string/scan" />
                </LinearLayout>

                <!--分割线-->
                <include layout="@layout/divider_meddle" />

                <!--按钮容器-->
                <LinearLayout style="@style/ItemContainer">
                    <!--图标-->
                    <ImageView
                        style="@style/ItemIcon"
                        android:src="@drawable/ic_phone" />
                    <!--文本-->
                    <TextView
                        style="@style/ItemText"
                        android:text="@string/my_message" />
                </LinearLayout>

                <!--按钮容器-->
                <LinearLayout style="@style/ItemContainer">
                    <!--图标-->
                    <ImageView
                        style="@style/ItemIcon"
                        android:src="@drawable/ic_phone" />
                    <!--文本-->
                    <TextView
                        style="@style/ItemText"
                        android:text="@string/my_friend" />
                </LinearLayout>

                <!--按钮容器-->
                <LinearLayout style="@style/ItemContainer">
                    <!--图标-->
                    <ImageView
                        style="@style/ItemIcon"
                        android:src="@drawable/ic_phone" />
                    <!--文本-->
                    <TextView
                        style="@style/ItemText"
                        android:text="@string/my_fans" />
                </LinearLayout>

                <!--分割线-->
                <include layout="@layout/divider_meddle" />

                <!--按钮容器-->
                <LinearLayout style="@style/ItemContainer">
                    <!--图标-->
                    <ImageView
                        style="@style/ItemIcon"
                        android:src="@drawable/ic_phone" />
                    <!--文本-->
                    <TextView
                        style="@style/ItemText"
                        android:text="@string/shop" />
                </LinearLayout>

                <!--按钮容器-->
                <LinearLayout style="@style/ItemContainer">
                    <!--图标-->
                    <ImageView
                        style="@style/ItemIcon"
                        android:src="@drawable/ic_phone" />
                    <!--文本-->
                    <TextView
                        style="@style/ItemText"
                        android:text="@string/my_order" />
                </LinearLayout>

                <!--按钮容器-->
                <LinearLayout style="@style/ItemContainer">
                    <!--图标-->
                    <ImageView
                        style="@style/ItemIcon"
                        android:src="@drawable/ic_phone" />
                    <!--文本-->
                    <TextView
                        style="@style/ItemText"
                        android:text="@string/my_new_order" />
                </LinearLayout>

                <!--分割线-->
                <include layout="@layout/divider_meddle" />

                <LinearLayout style="@style/ItemContainer">
                    <!--图标-->
                    <ImageView
                        style="@style/ItemIcon"
                        android:src="@drawable/ic_phone" />
                    <!--文本-->
                    <TextView
                        style="@style/ItemText"
                        android:text="@string/online_music_free" />
                </LinearLayout>

                <!--按钮容器-->
                <LinearLayout style="@style/ItemContainer">
                    <!--图标-->
                    <ImageView
                        style="@style/ItemIcon"
                        android:src="@drawable/ic_phone" />
                    <!--文本-->
                    <TextView
                        style="@style/ItemText"
                        android:text="@string/nearby" />
                </LinearLayout>

                <!--按钮容器-->
                <LinearLayout style="@style/ItemContainer">
                    <!--图标-->
                    <ImageView
                        style="@style/ItemIcon"
                        android:src="@drawable/ic_phone" />
                    <!--文本-->
                    <TextView
                        style="@style/ItemText"
                        android:text="@string/theme" />

                    <!--值-->
                    <TextView
                        style="@style/ItemTextHint"
                        android:text="官方红" />
                </LinearLayout>

                <!--按钮容器-->
                <LinearLayout style="@style/ItemContainer">
                    <!--图标-->
                    <ImageView
                        style="@style/ItemIcon"
                        android:src="@drawable/ic_phone" />
                    <!--文本-->
                    <TextView
                        style="@style/ItemText"
                        android:text="@string/recognition_music" />
                </LinearLayout>

                <!--按钮容器-->
                <LinearLayout style="@style/ItemContainer">
                    <!--图标-->
                    <ImageView
                        style="@style/ItemIcon"
                        android:src="@drawable/ic_phone" />
                    <!--文本-->
                    <TextView
                        style="@style/ItemText"
                        android:text="@string/time_stop" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!--分割线-->
        <include layout="@layout/divider_small" />

        <!--顶部按钮容器-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_height">

            <!--按钮容器-->
            <LinearLayout
                android:orientation="horizontal"
                android:clickable="true"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <!--图标-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone" />
                <!--文本-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/night_model"
                    android:layout_marginLeft="@dimen/padding_small"
                    android:textColor="@color/text" />
            </LinearLayout>

            <!--按钮容器-->
            <LinearLayout
                android:orientation="horizontal"
                android:clickable="true"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <!--图标-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone" />
                <!--文本-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting"
                    android:layout_marginLeft="@dimen/padding_small"
                    android:textColor="@color/text" />
            </LinearLayout>

            <!--按钮容器-->
            <LinearLayout
                android:orientation="horizontal"
                android:clickable="true"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <!--图标-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone" />
                <!--文本-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logout"
                    android:layout_marginLeft="@dimen/padding_small"
                    android:textColor="@color/text" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>