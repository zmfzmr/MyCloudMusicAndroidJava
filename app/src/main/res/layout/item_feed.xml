<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_middle">
    <!--头部容器-->
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--头像-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/avatar_width_meddle"
            android:layout_height="@dimen/avatar_width_meddle"
            android:src="@drawable/placeholder" />

        <!--用户信息容器-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_middle"
            android:layout_weight="1"
            android:orientation="vertical">
            <!--昵称-->
            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="这是昵称"
                android:textColor="@color/text" />

            <!--时间-->
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12:28"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/text_small" />


        </LinearLayout>

    </LinearLayout>

    <!--内容容器
        头像40dp + 间距
    -->
    <LinearLayout
        android:layout_marginLeft="50dp"
        android:layout_marginTop="@dimen/padding_middle"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--动态内容-->
        <androidx.emoji.widget.EmojiTextView
            android:id="@+id/tv_content"
            android:lineSpacingMultiplier="@dimen/line_space"
            android:textColor="@color/text"
            android:text="这是评论内容，这是评论内容，这是评论内容，这是评论内容，这是评论内容，这是评论内容，这是评论内容，这是评论内容，这是评论内容，这是评论内容，这是评论内容，这是评论内容，这是评论内容，"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--按钮容器-->
        <LinearLayout
            android:layout_marginTop="@dimen/padding_middle"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <!--按钮-->
                <TextView
                    android:gravity="center_horizontal"
                    android:drawablePadding="@dimen/padding_small"
                    android:drawableLeft="@drawable/ic_phone"
                    android:textColor="@color/light_grey"
                    android:text="1228"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <!--按钮-->
                <TextView
                    android:gravity="center_horizontal"
                    android:drawablePadding="@dimen/padding_small"
                    android:drawableLeft="@drawable/ic_phone"
                    android:textColor="@color/light_grey"
                    android:text="1228"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--按钮容器-->
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:drawablePadding="@dimen/padding_small"
                    android:drawableLeft="@drawable/ic_phone"
                    android:text="1228"
                    android:textColor="@color/light_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>