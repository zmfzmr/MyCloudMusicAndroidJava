<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="colorPrimary">#dd0000</color>
    <color name="colorPrimaryDark">@color/colorPrimary</color>
    <color name="colorAccent">@color/colorPrimary</color>

    <!--  常用颜色 -->
    <color name="white">@android:color/white</color>
    <color name="black">@android:color/black</color>

    <!--透明颜色-->
    <color name="transparent">@android:color/transparent</color>


    <!--    全局背景-->
    <color name="background">@android:color/white</color>

    <!--亮一点的灰色-->
    <color name="light_grey">#aaaaaa</color>
    <color name="text">#333</color>
    <!--分割线颜色-->
    <color name="divider_color">#e7e9e9</color>

    <!--
        首页按钮未选中颜色
        argb
        a:透明度  ff:完全不透明

        注意：透明是指前面的2位  后面的ffffff：表示白色
        如果把aa改成ff，那就是完全不透明
    -->
    <color name="tab_normal">#aaffffff</color>

    <!--列表歌词颜色-->
    <color name="lyric_text_color">#eee</color>
    <!--全局歌词View颜色
        cc:是透明度
        后面的是黑色

        意思说：黑色的基础上有些透明
    -->
    <color name="global_lyric_background">#cc000000</color>

    <!--全局歌词颜色-->
    <color name="lyric_color0">#DD0000</color>
    <color name="lyric_color1">#4EC6ED</color>
    <color name="lyric_color2">#55E19B</color>
    <color name="lyric_color3">#F2B34E</color>
    <color name="lyric_color4">#A65EEA</color>
</resources>
