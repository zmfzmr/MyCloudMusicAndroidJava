<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--定义一个名为LyricLineView样式
         name="LyricLineView":这里为自定义的类名 说明是针对这类的属性
         注意：这个名称是不能随便写的
    -->
    <declare-styleable name="LyricLineView">
        <!--歌词大小-->
        <attr name="text_size" format="dimension" />
        <!--歌词默认颜色-->

        <attr name="text_color" format="color" />

        <!--歌词高亮颜色-->
        <attr name="selected_text_color" format="color" />

        <!--歌词位置
            这里类似于枚举 里面有几个变量

            注意：里面用的是flag name  value
                value写成16进制 规范点（字体也是这么命名的）这个16进制可以随便写
        -->
        <attr name="gravity">
            <flag name="left" value="0x01" />
            <flag name="center" value="0x10" />
        </attr>

    </declare-styleable>
</resources>