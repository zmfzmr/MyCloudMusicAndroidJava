<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--去除ActionBar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--状态栏透明
        由于小于21版本，是无法更改状态栏颜色，所以他里面没有任何代码。
        没有代码为啥要定义呢，因为编译的时候可能找不到这个属性，所以需要定义
    -->
    <style name="AppTheme.NoActionBar.StatusBarTransparent">

    </style>

    <!--状态栏黑色
        由于小于21版本，是无法更改状态栏颜色，所以他里面没有任何代码。
        没有代码为啥要定义呢，因为编译的时候可能找不到这个属性，所以需要定义
        防止在低版本上报错
    -->
    <style name="AppTheme.NoActionBar.StatusBarBlack">

    </style>

    <!--  AppBarLayout样式
        这个AppBarLayout样式显示的是暗一点的颜色，那么里面的文字就会显示亮一点的颜色
     -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!--  Toolbar样式  -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TextSmall">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/padding_large</item>
    </style>

    <style name="EditText">
        <!--    宽高    -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- 图片和文字距离   图片左边图片 -->
        <item name="android:drawablePadding">@dimen/padding_middle</item>
        <item name="android:drawableLeft">@drawable/ic_phone</item>
        <!-- 内边距 顶部和底部的距离       -->
        <item name="android:paddingTop">@dimen/padding_middle</item>
        <item name="android:paddingBottom">@dimen/padding_middle</item>

        <item name="android:layout_marginTop">@dimen/padding_middle</item>
        <!--最大显示一行-->
        <item name="android:lines">1</item>
        <!--编辑框EditText背景 默认状态和选中状态-->
        <item name="android:background">@drawable/selector_edit_text</item>

    </style>

    <!--侧滑界面ItemContainer（item容器）-->
    <style name="ItemContainer">
        <!--可点击 LinearLayout是不可点击，设置为可点击 -->
        <item name="android:clickable">true</item>
        <!--左侧padding -->
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <!--右侧padding -->
        <item name="android:paddingRight">@dimen/padding_large</item>
        <!--内容垂直居中对齐-->
        <item name="android:gravity">center_vertical</item>
        <!--宽高-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_item_height</item>
        <!--内容方向为水平-->
        <item name="android:orientation">horizontal</item>
    </style>

    <!--
        ImageView里面的style设置
        侧滑界面Item图标
    -->
    <style name="ItemIcon">
        <!--宽高-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--侧滑界面Item文本-->
    <style name="ItemText">
        <!--左侧margin-->
        <item name="android:layout_marginLeft">@dimen/padding_small</item>

        <!--文本颜色-->
        <item name="android:textColor">@color/text</item>

        <!--宽高-->
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--侧滑界面Item值 (个性换肤 右边的官方红 )-->
    <style name="ItemTextHint">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
